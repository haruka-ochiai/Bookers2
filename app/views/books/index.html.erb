<div class="container">
    <div class="row">
        <%= render 'info', book: @book, user: current_user%>

        <div class="col-md8 offset-md-1">
           <table class="table table-hover table-inverse">
               <h1>Books</h1>
                <thead>
                <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Opinion</th>
                </tr>
                </thead>
            
                <tbody>   
                <% @books.each do |book| %>
                    <tr>
                        <td><%= link_to user_path(book.user_id) do %>
                                <%= image_tag book.user.get_profile_image(100,100) %>
                            <% end %>
                        </td>
                        <td><%= link_to book.title, book_path(book) %></td>
                        <td><%= book.body %></td>
                    </tr>
                <% end %>
                </tbody> 
             </table>
        </div>
    </div>
</div>