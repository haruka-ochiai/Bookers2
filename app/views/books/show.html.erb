<div class="container">
    <div class="row">
        <div class="col-md-3">
            <h2>User Info</h2>
                <table class="table">
                <%= image_tag @user.get_profile_image(100,100) %>
                <tr><th>name</th><th><%= @user.name %></th></tr>
                <tr><th>introduction</th><th><%= @user.introduction %></th></tr>
                </table>
                <div class="row pb-4">
                        <%= link_to edit_user_path(@user.id), class:'btn btn-secondary w-100' do %>
                        <i class="fas fa-user-cog"></i>
                        <% end %>
                </div>
            
                <div class="form-group">
                <%= form_with model: Book.new, url:books_path, method: :post do |f| %>
                    <h2>New book</h2>
                        <div class="form-group">
                            <p>Title</p>
                            <%= f.text_field :title, class:"form-control" %>
                        </div>
                        <div class="form-group">
                            <p>Opinion</p>
                            <%= f.text_area :body, class:"form-control" %>
                        </div>
                        <div class="form-group"><%= f.submit class: 'btn btn-success' %></div>
                <% end %>
                </div>
            
        </div>    

        <div class="col-md8 offset-md-1">
           <table class="table">
               <h1>Book detail</h1>
                
                <tr>
                    <td>
                        <%= link_to user_path(@user) do %>
                            <%= image_tag @user.get_profile_image(100, 100) %>
                        <% end %>
                        <br>
                        <%= link_to @user.name, user_path(@user) %>
                    </td>
                    <td><%= link_to @book.title, book_path(@book) %></td>
                    <td><%= @book.body %></td>
                    <td>
                        <% if @book.user == current_user %>
                            <%= link_to "Edit", edit_book_path, class:"btn btn-success" %>
                        <% end %>
                    </td>
                    <td>
                        <% if @book.user == current_user %>
                            <%= link_to "Destroy", book_path(@book), class:"btn btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %>
                        <% end %>
                    </td>
                </tr>
                    
                
                   
             </table>
        </div>
    </div>
</div>