<div class="container">
    <div class="row">
        <div class= "col-mg-8 mx-auto">
            <h1>Editing Book</h1>
                    <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
                <div class="form-group">
                    <label for="inputTitle">Title</label>
                    <%= f.text_field :title, class:"form-control", autofocus: true, id:"inputTitle", placeholder:"Title" %>
                </div>
                <div class="form-group">
                    <label for="inputBody">Opinion</label>
                    <%= f.text_area :body, class:"form-control", autofocus: true, id:"inputBody" %>
                </div>
                    <%= f.submit "Update Book", class: "btn btn-success" %>
                    <% end %>
        </end>
    </div>
</div>

