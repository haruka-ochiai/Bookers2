<div class="container">
    <div class="row mx-auto">
        <%= render 'books/info', book: @book, user: current_user  %>
        <div class="col-md-8 offset-md-1">
           <table class="table">
               <h1>Users</h1>
                
                <tr>
                    <th>image</th>
                    <th>name</th>
                    <th colspan="5"></th>
                </tr>
    
                <% @users.each do |user| %>
                    <tr>
                        <td><%= image_tag user.get_profile_image(80,80) %></td>
                        <td><%= user.name %></td>
                        <td><%= link_to "Show", user_path(user.id) %></td>
                    </tr>
                <% end %>
             </table>
        </div>
    </div>
</div>