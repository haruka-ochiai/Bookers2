<div class="container mx-auto px-5 pt-3">
    <div class="row">
        <%= render 'books/info', book: @book, user: @user %>

        <div class="col-md-8 offset-md-1">
           <table class="table table-hover table-inverse">
               <h2>Books</h2>
                
                <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Opinion</th>
                    <th colspan="3"></th>
                </tr>
    
                <% @books.each do |book| %>
                    <tr>
                        <td>
                            <%= link_to user_path(book.user_id) do %>
                                <%= image_tag @user.get_profile_image(80,80) %>
                            <% end %>
                        </td>
                        <td><%= link_to book.title, book_path(book.id) %></td>
                        <td><%= book.body %></td>
                    </tr>
                <% end %>
             </table>
        </div>
    </div>
</div>