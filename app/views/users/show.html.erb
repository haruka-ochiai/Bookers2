<div class="container">
    <div class="row">
        <div class="col-md-3">
            <h2>User info</h2>
                <table class="table">
                <%= image_tag @user.get_profile_image(100,100) %>
                <tr><th>name</th><th><%= @user.name %></th></tr>
                <tr><th>introduction</th><th><%= @user.introduction %></th></tr>
                </table>
                <div class="row pb-4">
                    <% if @user == current_user %>
                        <%= link_to edit_user_path, class:'btn btn-secondary w-100' do %>
                        <i class="fas fa-user-cog"></i>
                    <% end %>
                        <% end %>
                </div>
            
                <div class="form-group">
                <%= form_with model: @book, url:books_path, method: :post do |f| %>
                    <h2>New book</h2>
                        <div class="form-group">
                            <p>Title</p>
                            <%= f.text_field :title, class:"form-control" %>
                        </div>
                        <div class="form-group">
                            <p>Opinion</p>
                            <%= f.text_area :body, class:"form-control" %>
                        </div>
                        <div class="form-group"><%= f.submit class: 'btn btn-success' %></div>
                <% end %>
                </div>
            
        </div>    

        <div class="col-md8 offset-md-1">
           <table class="table table-hover table-inverse">
               <h1>Books</h1>
                
                <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Opinion</th>
                </tr>
    
                <% @books.each do |book| %>
                    <tr>
                        <td><%= image_tag @user.get_profile_image(100,100) %></td>
                        <td><%= link_to book.title, book_path(book.id) %></td>
                        <td><%= book.body %></td>
                    </tr>
                <% end %>
             </table>
        </div>
    </div>
</div>